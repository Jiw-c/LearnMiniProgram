<!--pages/image/image.wxml-->
<!-- 1.image基本使用 -->
<!-- 重点：
  1.image组件可用写成单标签，也可以使用双标签
  2.image组件默认有自己的大小：320×240
   -->
<image></image>
<image/>

<!-- 2.src：本地路径/远程地址 -->
<image src="../../assets/home/popular_bg.jpg"></image>

<!-- 补充：让用户选择相册中图片 -->
<button bindtap="handleChooseImage">选择图片</button>
<image src="{{imagePath}}"></image>

<!-- 3.bindload:监听图片加载完成 -->
<!-- lazy-load:图片的懒加载 -->
<view>-------------------------</view>
<image wx:for="{{10}}" 
       src="../../assets/home/popular_bg.jpg"
       bindload="handleImageLoad"
       lazy-load>
 </image>

<!-- 4.show-menu-by-longpress：长按图片出现识别小程序码 -->
<image src="../../assets/home/popular_bg.jpg"
       show-menu-by-longpress>
</image>
