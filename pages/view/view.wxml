<!--pages/view/view.wxml-->
<text>pages/view/view.wxml</text>
<!-- 1.view基本使用 -->
<view class="box">哈哈哈</view>

<!-- 2.hover-class：用户按下组件时，显示的样式 -->
<view class="box1" 
      hover-class="hover-view"
      hover-stay-time="{{0}}">
box1
</view>

<!-- 3.阻止冒泡事件 -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" 
        hover-class="hover-view"
        hover-stay-time="{{0}}"
        hover-stop-propagation>   
  box1
  </view>
</view>